{{!-- sign up form (Bootstrap) --}}
<div class="row d-flex mt-1 signup">
    <div class="col-12 d-flex login-header ">  <!-- flex row -->
        <h2 class="p-1">Sign Up</h2>
    </div>

    <div class="col-12 mb-3 mt-3">
        <form class="form signup-form">
            <div class="form-group">
                <label for="username-signup" class="form-label">Username:</label>
                <input class="form-input form-control" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup" class="form-label">Password:</label>
                <input class="form-input form-control" type="password" id="password-signup" />
            </div>
            <div class="d-grid gap-3 mb-3">
                <button class="btn btn-secondary w-100" type="button">Sign Up!</button>
            </div>
            <div class="login-link">
                <a href="/login"  class="link-dark">Login instead</a>
            </div>
        </form>
    </div>
</div>
{{!-- script to send new user data to API endpoint --}}
<script src="/js/signup.js"></script>