<div class="row d-flex mt-1 new-post">
    <div class="col-12 d-flex post-header">  <!-- flex row -->
        <h3 class="p-1">Create New Post</h3>
    </div>

    <div class="col-12 mb-3 mt-3">  <!-- flex row -->
        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title" class="form-label">Title:</label>
                <input class="form-input form-control" type="text" id="post-title" name="post-title" />
            </div>
            <div class="form-group">
                <label for="post-content" class="form-label">Content:</label>
                <textarea class="form-input form-control" type="text" id="post-content" name="post-content"></textarea>
            </div>
            <div class="d-grid gap-3 mb-3">
                <button class="btn btn-secondary w-100 create-btn" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="d-grid gap-3 mt-3 mb-3 new-post-btn">
    <button class="btn btn-dark w-100 add-new" type="submit">+ New Post</button>
</div>



