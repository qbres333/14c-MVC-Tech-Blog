<div class="row mt-1">
    <div class="post-header mb-2 mt-2">
            <div>Create New Post</div>
        </div>
    <form class="form new-post-form">
        <div class="form-group">
            <label for="post-title" class="form-label">Title:</label>
            <input class="form-input form-control" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group"></div>
            <label for="post-content" class="form-label">Content:</label>
            <input class="form-input form-control" type="text" id="post-content" name="post-content" />
        </div>

        <div class="d-grid gap-3 mb-3"></div>
                <button class="btn btn-secondary w-100" type="submit">Create</button>
        </div>
    </form>

</div>
