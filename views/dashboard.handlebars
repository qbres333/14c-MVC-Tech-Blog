{{!-- dashboard shows all of the user's posts, and the option to create a new post --}}
<div class="row justify-content-end mt-3 mb-3 current-user">
    <div>Logged in as: {{name}}</div>
</div>


{{!-- ------------ refactor code from homepage ---------- --}}
<div class="mt-1">
{{#if blogposts.length}}

    {{#each blogposts as |blogpost|}} 
    <div class="row mb-1 mt-1 blogpost">
        <div class="col-md-12 d-flex post-preview justify-content-between">
            <a href="/{{blogpost.id}}">{{blogpost.title}}</a>
            <div>Posted by {{name}} on {{format_date blogpost.dateCreated}}</div>
        </div>

    </div>
    {{/each}}
{{!-- {{else}} --}}
{{!-- <div class="no-posts text-center align-middle mb-10">Click "+ New Post" to add a blog post here.</div> --}}

{{/if}}
</div>

