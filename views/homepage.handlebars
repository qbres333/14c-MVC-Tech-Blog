{{!-- homepage shows preview of all blog posts;
loop over each object in the blogposts array --}}
{{#each blogposts as |blogpost| }} 
<div class="row mb-3 mt-1 blogpost">
    <div class="col-md-12 d-flex post-header justify-content-between">
        <a href="/posts/{{blogpost.id}}">{{blogpost.title}}</a>
        <div>Posted by {{blogpost.user.username}} on {{format_date blogpost.dateCreated}}</div>
    </div>
    <div class="col-md-12 post-content">
        <div>{{blogpost.content}}</div>
    </div>
    {{!-- coonditionally show number of comments --}}
    {{#if blogpost.comment.length}}
    <div class="col-md-12 post-comments justify-content-start"></div>
        <div>{{blogpost.comment.length}} Comments</div>
    </div>
    {{/if}}

</div>
{{/each}}

{{!-- scripts --}}
{{#if logged_in}}
        <script src="/js/logout.js"></script>
{{/if}}