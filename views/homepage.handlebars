{{!-- homepage shows preview of all blog posts;
loop over each object in the blogposts array --}}
{{#each blogposts as |blogpost|}} 
<div class="row mb-3 mt-1 blogpost">
    <a href="/add-comment/{{blogpost.id}}" class="col-md-12 d-flex post-header post-header-link justify-content-between">
        <span>{{blogpost.title}}</span>
        <span>Posted by {{blogpost.user.username}} on {{format_date blogpost.dateCreated}}</span>
    </a>
    <div class="col-md-12 post-content">
        <div>{{blogpost.content}}</div>
    </div>
    {{#if blogpost.comments.length}}
    <div class="col-md-12 d-flex justify-content-start post-footer">
        <div>Comments: {{blogpost.comments.length}}</div>
    </div>
    {{/if}}
</div>
{{/each}}


{{!-- script to render comment view --}}
<script src="/js/new-comment.js" ></script> 